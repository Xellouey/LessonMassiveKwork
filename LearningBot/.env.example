# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here
BOT_WEBHOOK_URL=https://your-domain.com/webhook

# Database Configuration
# For PostgreSQL (recommended for production):
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/learningbot_db

# For SQLite (development only):
# DATABASE_URL=sqlite+aiosqlite:///./learningbot.db

# Admin Configuration
ADMIN_IDS=123456789,987654321  # Comma-separated list of Telegram user IDs

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379/0

# Application Settings
DEBUG=False
LOG_LEVEL=INFO

# Security Settings
SECRET_KEY=your_secret_key_here

# Payment Settings (Telegram Stars)
PAYMENT_PROVIDER_TOKEN=  # Leave empty for Telegram Stars

# Environment
ENVIRONMENT=development  # development, staging, production